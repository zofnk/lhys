<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"           android:layout_gravity="center"
              android:descendantFocusability="blocksDescendants"
              android:orientation="horizontal">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/my_table_title_shape_down"
                android:gravity="center"
                android:text="期"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/my_table_title_shape_down"
                android:gravity="center"
                android:text="特"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>
        </TableRow>

        <TableRow android:id="@+id/tr_1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/my_table_title_shape_up"
                android:gravity="center"
                android:text="數"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/my_table_title_shape_up"
                android:gravity="center"
                android:text="碼"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>
        </TableRow>

        <TableRow >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="2"
                android:background="@drawable/my_table_title_shape_yellow"
                android:gravity="center"
                android:text="次數"
                android:textColor="@android:color/holo_red_light"
                android:textSize="14sp"/>
        </TableRow>

    </TableLayout>


    <com.lh16808.app.lhys.widget.InterceptScrollContainer
        android:id="@+id/scroollContainter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false">

        <com.lh16808.app.lhys.widget.MyHScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:scrollbars="none">
            <TableLayout
                android:id="@+id/table_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_span="5"
                        android:background="@drawable/my_table_title_shape"
                        android:gravity="center"
                        android:text="特頭走勢"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_span="2"
                        android:background="@drawable/my_table_title_shape"
                        android:gravity="center"
                        android:text="特頭單雙"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"/>
                </TableRow>

                <TableRow android:id="@+id/tr_2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/my_table_title_shape"
                        android:gravity="center"
                        android:text="0頭"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/my_table_title_shape"
                        android:gravity="center"
                        android:text="1頭"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/my_table_title_shape"
                        android:gravity="center"
                        android:text="2頭"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/my_table_title_shape"
                        android:gravity="center"
                        android:text="3頭"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/my_table_title_shape"
                        android:gravity="center"
                        android:text="4頭"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/my_table_title_shape"
                        android:gravity="center"
                        android:text="雙頭"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/my_table_title_shape"
                        android:gravity="center"
                        android:text="單頭"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"/>

                </TableRow>

                <TableRow android:id="@+id/tr_3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/my_table_title_shape_yellow"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/my_table_title_shape_yellow"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/my_table_title_shape_yellow"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/my_table_title_shape_yellow"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/my_table_title_shape_yellow"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/my_table_title_shape_yellow"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/my_table_title_shape_yellow"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="14sp"/>

                </TableRow>

            </TableLayout>
        </com.lh16808.app.lhys.widget.MyHScrollView>
    </com.lh16808.app.lhys.widget.InterceptScrollContainer>

</LinearLayout>