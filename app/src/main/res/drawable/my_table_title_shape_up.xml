<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="-1dp">
        <shape>
            <solid android:color="#dddddd"/>

            <stroke
                android:width="0.01dp"
                android:color="#CBCBCB"/>
            <!-- 间隔 -->

            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/> <!-- 各方向的间隔 -->
        </shape>
    </item>

</layer-list>