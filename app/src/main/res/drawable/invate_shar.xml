<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <stroke android:width="1.0px" android:color="@android:color/white" />
            <gradient android:angle="270.0" android:endColor="@android:color/white" android:startColor="@android:color/white" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="@android:color/white" android:startColor="@android:color/white" />

            <stroke android:width="1.0px" android:color="@android:color/white" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="@android:color/white" android:startColor="#ffffff" />
            <stroke android:width="1.0px" android:color="@android:color/white" />
        </shape></item>

</selector>